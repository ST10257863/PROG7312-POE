@model Municipality_Application.ViewModels.EventIndexViewModel
@{
    ViewData["Title"] = "Local Events";
    var categories = Model.Categories ?? new HashSet<string>();
    var recommendations = Model.Recommendations ?? Enumerable.Empty<Municipality_Application.ViewModels.EventViewModel>();
    bool hasSearch =
        !string.IsNullOrWhiteSpace(Model.Search)
        || !string.IsNullOrWhiteSpace(Model.Category)
        || Model.Date != null
        || !string.IsNullOrWhiteSpace(Model.Latitude?.ToString())
        || !string.IsNullOrWhiteSpace(Model.Longitude?.ToString());
}

@section Scripts {
    <script src="~/js/event-filters.js"></script>
    <script src="~/js/google-autocomplete.js"></script>
    <script src="~/js/location-warning.js"></script>
    <google-maps-script callback="initGoogleAutocompleteForEventAddress"></google-maps-script>
    <script>
        function initGoogleAutocompleteForEventAddress() {
            window.initGoogleAutocomplete("EventAddress");
        }
        window.showLocationWarningIfNeeded('location-warning');
    </script>
}

<div class="container mt-4">
    <h1 class="mb-4">Local Events & Announcements</h1>
    <form method="get" class="row mb-4" id="eventSearchForm">
        <div class="col-md-3">
            <input type="text" name="Search" class="form-control" placeholder="Search by keyword..." value="@Model.Search" />
        </div>
        <div class="col-md-3">
            <select name="Category" class="form-select">
                <option value="">All Categories</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat" selected="@(cat == Model.Category ? "selected" : null)">@cat</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <input type="date" name="Date" class="form-control" value="@Model.Date?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <button type="button" class="btn btn-outline-secondary w-100"
                    onclick="clearEventFilters('eventSearchForm', 'EventAddress', 'EventAddress_Latitude', 'EventAddress_Longitude', '@Url.Action("Index", "Events")')">
                Clear Filter
            </button>
        </div>

        <div class="mb-3">
            <label for="EventAddress" class="form-label"><i class="bi bi-geo-alt"></i> Event Location</label>
            <input type="text" class="form-control" id="EventAddress" name="Address" placeholder="Enter event address or location" value="@Model.Address" />
        </div>
        <div id="location-warning" class="alert alert-warning mt-2" style="display:none;">
            <strong>Location services are currently unavailable.</strong> We apologise for the inconvenience.
        </div>
    </form>

    @if (!hasSearch)
    {
        <h4>Recommended Events</h4>
        <div class="row mb-3">
            @foreach (var ev in recommendations)
            {
                <div class="col-md-4 mb-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@ev.Title</h5>
                            <p class="card-text">@ev.Description</p>
                            <span class="badge bg-info">@ev.Category</span>
                            <span class="badge bg-secondary">@ev.Date.ToShortDateString()</span>
                            <span class="badge bg-light text-dark">
                                @ev.Address?.DisplayAddress
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <h4>@(hasSearch ? "Search Results" : "All Events")</h4>
    <div class="row">
        @if (Model.Events == null || !Model.Events.Any())
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    No events found matching your search criteria.
                </div>
            </div>
        }
        else
        {
            @foreach (var ev in Model.Events)
            {
                <div class="col-md-4 mb-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@ev.Title</h5>
                            <p class="card-text">@ev.Description</p>
                            <span class="badge bg-info">@ev.Category</span>
                            <span class="badge bg-secondary">@ev.Date.ToShortDateString()</span>
                            <span class="badge bg-light text-dark">
                                @ev.Address?.DisplayAddress
                            </span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>