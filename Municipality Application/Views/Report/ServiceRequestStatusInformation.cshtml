@model Municipality_Application.ViewModels.ServiceRequestStatusViewModel

@{
    ViewData["Title"] = "Report Information - MunicipalConnect";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <!-- Back Arrow -->
                    <a href="javascript:history.back()" class="btn btn-link p-0 mb-3" title="Back" style="font-size: 1.5rem;">
                        <span aria-hidden="true">&#8592;</span> Back
                    </a>
                    <h3 class="text-primary">Report ID: @Model.Id</h3>
                    <p><strong>Category:</strong> @Model.Category</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Reported At:</strong> @Model.ReportedAt.ToLocalTime().ToString("g")</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                    <div class="mt-4">
                        <strong>Status:</strong>
                        <span class="badge @(Model.Status == "Resolved" ? "bg-success" : Model.Status == "In Progress" ? "bg-warning text-dark" : "bg-secondary")" style="font-size:1rem;">
                            @Model.Status
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>