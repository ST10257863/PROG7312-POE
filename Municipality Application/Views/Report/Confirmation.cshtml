@model Municipality_Application.ViewModels.ReportConfirmationViewModel

@{
    ViewData["Title"] = "Report Submitted - MunicipalConnect";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Report Submitted Successfully</h2>
                    <p class="card-text">Thank you for submitting your report. Your report details are:</p>
                    <h3 class="text-primary">Report ID: @Model.Id</h3>
                    <p><strong>Category:</strong> @Model.CategoryName</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Reported At:</strong> @Model.ReportedAt.ToLocalTime().ToString("g")</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                    <p>
                        <strong>Address:</strong>
                        @if (Model.Address != null)
                        {
                            if (!string.IsNullOrWhiteSpace(Model.Address.FormattedAddress))
                            {
                                @Model.Address.FormattedAddress
                            }
                            else
                            {
                                @($"{Model.Address.Street}, {Model.Address.City}, {Model.Address.Province}, {Model.Address.PostalCode}, {Model.Address.Country}")
                            }
                        }
                    </p>
                    @if (Model.Address?.Latitude != null && Model.Address?.Longitude != null)
                    {
                        <p><strong>Location:</strong> Lat: @Model.Address.Latitude, Long: @Model.Address.Longitude</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <p><strong>Contact Phone:</strong> @Model.PhoneNumber</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <p><strong>Contact Email:</strong> @Model.Email</p>
                    }

                    @if (Model.Attachments != null && Model.Attachments.Any())
                    {
                        <div class="mt-3">
                            <strong>Attachments:</strong>
                            <ul>
                                @foreach (var attachment in Model.Attachments)
                                {
                                    <li>
                                        <a href="@Url.Content(attachment.FilePath)" download="@attachment.FileName">
                                            @attachment.FileName
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    <p>Please keep this information for future reference.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Return to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>